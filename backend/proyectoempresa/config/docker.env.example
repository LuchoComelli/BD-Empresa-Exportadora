# Configuración de desarrollo
DEBUG=1
SECRET_KEY=django-insecure-change-me-in-production
DJANGO_SETTINGS_MODULE=settings

# Base de datos
DB_NAME=bd_empresa_exportadora
DB_USER=postgres
DB_PASSWORD=change-this-password
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://postgres:change-this-password@db:5432/bd_empresa_exportadora

# Redis
REDIS_URL=redis://redis:6379/0

# Email Configuration (Gmail SMTP)
# Para desarrollo: usar console.EmailBackend para ver emails en consola
# Para producción: usar smtp.EmailBackend con credenciales de Gmail
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-app-password-de-gmail
DEFAULT_FROM_EMAIL=noreply@empresa-exportadora.com
SITE_URL=http://localhost:3000

# Logging
LOG_LEVEL=DEBUG

# Archivos estáticos
STATIC_URL=/static/
MEDIA_URL=/media/

